
@model DiplomaThesisSystemMVC.Models.DiplomaThesisTopic


@using (Html.BeginForm("Filter", "BrowseTopic"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-3">
                @Html.DropDownList("NumberOfStudents", (IEnumerable<SelectListItem>)ViewBag.NumberOfStudents, "NumberOfStudents", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NumberOfStudents, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-3">
                @Html.DropDownList("FieldOfStudy", (IEnumerable<SelectListItem>)ViewBag.FieldOfStudy, "FieldOfStudy", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FieldOfStudy, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.DropDownList("Degree", (IEnumerable<SelectListItem>)ViewBag.Degree, "Degree", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Degree, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                @Html.DropDownList("Availability", (IEnumerable<SelectListItem>)ViewBag.Availability, "Availability", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Availability, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Filter" class="btn btn-default" />
            </div>
        </div>
    </div>
}
