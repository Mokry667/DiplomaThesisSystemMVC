@model IEnumerable<DiplomaThesisSystemMVC.Models.DiplomaThesisTopic>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>Topics for Diploma Thesis</h4>
    <table class="table" style ="width: 100%;">
        <tr>
            <th style ="width: 20%;">
                Name
            </th>
            <th style ="width: 50%;">
                Description
            </th>
            <th style ="width: 10%;">
                Number of students
            </th>
            <th style ="width: 15%;">
                Field of study
            </th>
            <th style ="width: 5%;">
                Degree
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfStudents)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FieldOfStudy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Degree)
                </td>
            </tr>
        }

    </table>

    @Html.Partial("_SubmitTopicPartial", new DiplomaThesisSystemMVC.Models.DiplomaThesisTopic())

    @if (null != TempData["Message"])
    {
        <script type="text/javascript">
        alert("@TempData["Message"]");
        </script>
    }



</body>
</html>
